<div class="panel panel-primary">
    <!-- Heading -->
    <div class="panel-heading">
        <h2 class="panel-title">
            {{image.title}}
        </h2>
    </div>
    <!--BODY -->
    <div class="panel-body">
        <p>{{image.description}}</p>
        <div class="col-md12 text-center">
            <img
            class="img-thumbnail"
            src="/public/upload/{{image.filename}}"
            alt="{{image.title}}">
        </div>
    </div>
    <!-- FOOTER -->
    <div class ="panel-footer">
        <div class ="row">
            <div class="col-md-8">
                <button
                data-id="btn btn-success">
                <i class="fa fa-heart">

                </i>
                LOVE IT!
                </button>
                <strong class="likes-count">
                    {{image.like}}
                </strong>&nbsp;-&nbsp;
                <i class="fa fa-eye"></i>
            <strong
            </div>
        </div>
    </div>
</div>
<div class="panel panel-dafault">
    <!-- HEADING -->
    <div class="panel-heading">
            <div class="row">
                <div class="col-md-8">
                    <strong class="panel-title">
                        Comentarios
                    </strong>
                </div>
            <div class="col-md-4 text-right">
                <button
                data-id="{{image.uniqueId}}"
                id="btn-comment"
                class="btn btn-default btn-ms"
            </div>
            </div>
    
    </div>
        <!--BODY-->
        <div class="panel-body">
            <blockquote id="post-comment">
                <div class="row">
                    <!--FORM-->
                    <form
                    method="POST"
                    action="/images/comment/{{
                        image.uniqueId
                    }}">
                    <!--Campo Nombre-->
                    <div class="form-group col-sm-12">
                        <label
                        for="name"
                        class="col-ms-2 control-label">
                        Name:
                        </label>
                    </div>
                    <!--Campo Nombre-->
                    <div class="form-group col-sm-12">
                        <label
                        for="name"
                        class="col-ms-2 control-label">
                        Name:
                        </label>
                    </div>
                    <!--Campo Email-->
                    <div class="form-group col-sm-12">
                        <label
                        for="email"
                        class="col-ms-2 control-label">
                        email:
                        </label>
                    </div>
                    <!--Campo Email-->
                    <div class="form-group col-sm-12">
                        <label
                        for="email"
                        class="col-ms-2 control-label">
                        email:
                        </label>
                    </div>
                    <!--Campo Comment-->
                    <div class="form-group col-sm-12">
                        <label
                        for="comment"
                        class="col-ms-2 control-label">
                        comment:
                        </label>
                        <div class="col-sm-10"
                        <textarea
                        name="comment">
                    </div>
                    </form>
                    <!--Campo Comment-->
                    <div class="form-group col-sm-12">
                        <label
                        for="comment"
                        class="col-ms-2 control-label">
                        comment:
                        </label>
                        <div class="col-sm-10"
                        <textarea
                        name="comment">
                    </div>
                    </form>
                    <!--Campo submit-->
                    <div class="form-group col-sm-12">
                        <label
                        for="comment"
                        class="col-ms-2 control-label">
                        comment:
                        </label>
                        <div class="col-sm-10"
                        <textarea
                        name="comment">
                    </div>
                    </form>
                </div>
            </blockquote>
            <ul class="medialist">
                {{#each comments}}
                        <li class="media">
                            <a
                            href="#"
                            class="pull-left">
                            <img
                            src="http://www.gravatar.com/avatar{{gravatar}}"
                            alt="Avatar Image"
                            class="media-body">
                            {{comment}}
                            <br>
                            <strong class="media-heading">
                                {{name}}
                            </strong>
                            <small clas "text-muted">
                                {{timeago timestamp}}
                            </small>
                            </a>
                        </li>
                {{/each}}
            </ul>
        </div>
</div>