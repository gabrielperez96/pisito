<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Ultimos Comentarios:
        </h3>
    </div>
    <div class="panel-body">
        <ul class="media-list">
            {{#each sidebar.comment}}
            <li class="media">
                <a
                class="pull-left" 
                href="/images/{{image.uniqueId}}">
                <img
                width="45"
                height="45"
                class="media-object" 
                src="/public/upload/{{image.filename}}" 
                alt="Imagen">
                </a>
                <div class="media-body">
                    {{comment}} <br>
                    <strong class="media-heading">
                        {{name}}
                    </strong>
                    <small class="text-muted">
                        {{timeago timestamp}}
                    </small>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>